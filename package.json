{
  "name": "hookable",
  "version": "6.0.0-rc.1",
  "description": "Awaitable hook system",
  "keywords": [
    "hook",
    "hookable",
    "plugin",
    "tapable",
    "tappable"
  ],
  "repository": "unjs/hookable",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "scripts": {
    "bench": "node --expose-gc --allow-natives-syntax test/bench.ts",
    "build": "obuild src/index.ts",
    "dev": "vitest",
    "lint": "eslint --cache . && prettier -c src test",
    "lint:fix": "eslint --cache . --fix && prettier -c src test -w",
    "prepublish": "pnpm build",
    "release": "pnpm test && pnpm build && changelogen --release --prerelease --publish --publishTag rc --push",
    "test": "pnpm lint && vitest run --coverage",
    "test:types": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.3",
    "changelogen": "^0.6.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.38.0",
    "eslint-config-unjs": "^0.5.0",
    "expect-type": "^1.2.2",
    "hookable-prev": "npm:hookable@^5.0.0",
    "mitata": "^1.0.34",
    "obuild": "^0.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^4.0.3"
  },
  "packageManager": "pnpm@10.19.0"
}
